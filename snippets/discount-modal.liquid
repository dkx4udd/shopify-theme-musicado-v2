<!-- Kortingscode Modal - Alleen Nederlands -->
<div id="discountModal" class="modal discount-modal">
  <div class="modal-content discount-content">
    <div class="modal-header discount-header">
      <h2>ðŸŽµ Krijg 15% KORTING op je aankoop!</h2>
      <span class="close discount-close">&times;</span>
    </div>
    <div class="modal-body discount-body">
      <!-- Stap 1: E-mail Verzameling met Toestemming -->
      <div id="discountEmailStep" class="discount-step active">
        <p class="discount-description">
          Voer je e-mailadres in om 15% korting te krijgen op je aangepaste liedjescreatie!
        </p>
        
        <div class="discount-input-group">
          <input type="email" id="discountEmail" placeholder="Voer je e-mailadres in" required>
        </div>
        
        <!-- E-mail Toestemming Sectie -->
        <div class="discount-consent-section">
          <div class="discount-consent-checkbox" id="emailConsentCheckbox">
            <input type="checkbox" id="emailConsent" name="emailConsent" required>
            <label for="emailConsent">
              Ik ga akkoord met het ontvangen van promotionele e-mails en speciale aanbiedingen van musicado. Je kunt je op elk moment uitschrijven.
            </label>
          </div>
        </div>
        
        <div style="text-align: center; margin-top: 1.5rem;">
          <button onclick="window.MusicadoApp ? window.MusicadoApp.submitDiscountEmail() : submitDiscountEmail()" class="btn discount-btn">
            Krijg Mijn 15% Korting
          </button>
        </div>
        
        <p class="discount-terms">
          We respecteren je privacy. Geen spam, en je kunt je altijd uitschrijven.
        </p>
      </div>

      <!-- Stap 2: Succes met Kortingscode -->
      <div id="discountSuccessStep" class="discount-step">
        <div class="discount-success">
          <h3>ðŸŽ‰ Dank je wel!</h3>
          <p class="discount-instructions">
            Je korting is toegepast! Gebruik de onderstaande code bij het afrekenen:
          </p>
          
          <div class="discount-code-display">
            <span class="discount-code">15%MUSIC</span>
            <button onclick="window.MusicadoApp ? window.MusicadoApp.copyDiscountCode() : copyDiscountCode()" class="copy-btn">
              Kopieer Code
            </button>
          </div>
          
          <p class="discount-instructions">
            Deze code is 30 dagen geldig en is automatisch toegepast op je winkelwagen.
          </p>
          
          <div style="text-align: center; margin-top: 1.5rem;">
            <button onclick="window.MusicadoApp ? window.MusicadoApp.applyDiscountAndClose() : applyDiscountAndClose()" class="btn discount-continue">
              Ga door naar Afrekenen
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Fallback JavaScript voor wanneer MusicadoApp niet geladen is -->
<script>
  // Fallback functies als MusicadoApp niet beschikbaar is
  if (!window.submitDiscountEmail) {
    window.submitDiscountEmail = function() {
      console.log('Fallback: submitDiscountEmail');
      alert('Probeer het opnieuw. Als het probleem aanhoudt, neem contact op met de ondersteuning.');
    };
  }
  
  if (!window.copyDiscountCode) {
    window.copyDiscountCode = function() {
      console.log('Fallback: copyDiscountCode');
      const code = '15%MUSIC';
      if (navigator.clipboard) {
        navigator.clipboard.writeText(code).then(() => {
          alert('Code gekopieerd: ' + code);
        });
      } else {
        alert('Kopieer deze code: ' + code);
      }
    };
  }
  
  if (!window.applyDiscountAndClose) {
    window.applyDiscountAndClose = function() {
      console.log('Fallback: applyDiscountAndClose');
      const modal = document.getElementById('discountModal');
      if (modal) {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
      }
      alert('Korting toegepast! Je kunt nu doorgaan naar betaling.');
    };
  }
</script>

<style>
