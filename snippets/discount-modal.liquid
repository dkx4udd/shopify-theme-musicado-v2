  /* Animatie voor modal verschijning */
  .discount-modal {
    animation: fadeIn 0.3s ease-out;
  }
  
  .discount-modal .modal-content {
    animation: slideInDown 0.3s ease-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideInDown {
    from {
      transform: translateY(-30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
