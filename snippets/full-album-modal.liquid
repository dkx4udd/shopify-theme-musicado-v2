<!-- Full Album Contact Modal -->
<div id="fullAlbumModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>{{ 'musicado.full_album_contact_title' | t }}</h2>
      <span class="close" id="fullAlbumClose">&times;</span>
    </div>
    <div class="modal-body">
      <p>{{ 'musicado.full_album_contact_description' | t }}</p>
      
      <form id="fullAlbumContactForm" action="{{ routes.root_url }}contact" method="post">
        <input type="hidden" name="form_type" value="contact">
        <input type="hidden" name="contact[subject]" value="Full Album Inquiry">
        
        <div class="form-group">
          <label for="fullAlbumEmail">{{ 'musicado.email_address' | t }}</label>
          <input type="email" id="fullAlbumEmail" name="contact[email]" required 
                 placeholder="{{ 'musicado.email_placeholder' | t }}">
        </div>
        
        <div class="form-group">
          <label for="fullAlbumPhone">{{ 'musicado.phone_number' | t }}</label>
          <input type="tel" id="fullAlbumPhone" name="contact[phone]" required 
                 placeholder="{{ 'musicado.phone_placeholder' | t }}">
        </div>
        
        <div class="form-group">
          <label for="fullAlbumTopic">{{ 'musicado.topic' | t }}</label>
          <textarea id="fullAlbumTopic" name="contact[topic]" readonly rows="2">Interested in a full album please contact me</textarea>
        </div>
        
        <div class="form-group">
          <label for="fullAlbumNotes">{{ 'musicado.additional_notes' | t }}</label>
          <textarea id="fullAlbumNotes" name="contact[body]" rows="3" 
                    placeholder="{{ 'musicado.notes_placeholder' | t }}"></textarea>
        </div>
        
        <div style="text-align: center; margin-top: 1.5rem;">
          <button type="submit" class="btn">
            {{ 'musicado.submit_contact' | t }}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>