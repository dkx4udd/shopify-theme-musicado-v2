<div class="banner" 
     {% if section.settings.banner_image %}
       style="background-image: linear-gradient(rgba(15, 23, 42, 0.6), rgba(30, 41, 59, 0.6)), url('{{ section.settings.banner_image | image_url: width: 1200 }}');"
     {% endif %}>
  <h1>{{ section.settings.banner_text | default: shop.name }}</h1>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image",
      "info": "Recommended size: 1200x300px. If no image is selected, a default gradient background will be used."
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "ðŸŽµ musicado",
      "info": "The main heading text displayed on the banner"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 200,
      "max": 500,
      "step": 50,
      "unit": "px",
      "label": "Banner Height",
      "default": 300,
      "info": "Height of the banner section"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff",
      "info": "Color of the banner text"
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 60,
      "info": "Darkness of the overlay on the background image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "banner_text": "ðŸŽµ musicado",
        "text_alignment": "center",
        "text_color": "#ffffff",
        "banner_height": 300,
        "overlay_opacity": 60
      }
    }
  ]
}
{% endschema %}

<style>
  .banner {
    height: {{ section.settings.banner_height }}px;
    text-align: {{ section.settings.text_alignment }};
  }
  
  .banner h1 {
    color: {{ section.settings.text_color }};
  }
  
  {% if section.settings.banner_image %}
    .banner::before {
      background: rgba(15, 23, 42, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    }
  {% endif %}
</style>