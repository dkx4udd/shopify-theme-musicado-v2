<!-- Audio Examples Section -->
<div class="card">
  <h2 class="audio-examples-title">{{ 'musicado.listen_examples' | t }}</h2>
  <div class="audio-players">
    <div class="audio-player">
      <div class="audio-info">
        <h3 id="audioTitle1">{{ 'musicado.loading' | t }}</h3>
        <p id="audioDesc1">{{ 'musicado.random_example' | t }}</p>
      </div>
      <audio id="audioPlayer1" controls preload="metadata">
        <span>{{ 'musicado.audio_not_supported' | t }}</span>
      </audio>
      <button onclick="MusicadoApp.loadRandomAudio(1)" class="btn audio-refresh-btn">
        {{ 'musicado.play_another' | t }}
      </button>
    </div>
    
    <div class="audio-player">
      <div class="audio-info">
        <h3 id="audioTitle2">{{ 'musicado.loading' | t }}</h3>
        <p id="audioDesc2">{{ 'musicado.random_example' | t }}</p>
      </div>
      <audio id="audioPlayer2" controls preload="metadata">
        <span>{{ 'musicado.audio_not_supported' | t }}</span>
      </audio>
      <button onclick="MusicadoApp.loadRandomAudio(2)" class="btn audio-refresh-btn">
        {{ 'musicado.play_another' | t }}
      </button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Audio Examples",
  "settings": [
    {
      "type": "header",
      "content": "Audio Files"
    },
    {
      "type": "paragraph",
      "content": "Upload your MP3 files to Settings > Files in Shopify admin, then update the JavaScript to reference them."
    },
    {
      "type": "text",
      "id": "audio_file_1",
      "label": "Audio File 1",
      "info": "Filename of first MP3 (e.g., 'song1.mp3')"
    },
    {
      "type": "text",
      "id": "audio_file_2", 
      "label": "Audio File 2",
      "info": "Filename of second MP3 (e.g., 'song2.mp3')"
    }
  ],
  "presets": [
    {
      "name": "Audio Examples"
    }
  ]
}
{% endschema %}