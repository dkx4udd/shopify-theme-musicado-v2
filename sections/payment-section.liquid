<!-- Improved JavaScript for Payment Processing -->
<script>
  // Single processing flag - global scope
  let isProcessingPayment = false;
  let paymentAttempted = false;

  // Main payment processing function - called only once
  function processPaymentOnce() {
    // Prevent any double execution
    if (isProcessingPayment || paymentAttempted) {
      console.log('Payment already in progress or attempted, preventing double execution');
      return;
    }

    // Set flags immediately
    isProcessingPayment = true;
    paymentAttempted = true;
    
    // Disable the button immediately
    const button = document.getElementById('paymentButton');
    if (button) {
      button.disabled = true;
      button.style.pointerEvents = 'none';
    }

    if (window.MusicadoApp && window.MusicadoApp.processPayment) {
      showPaymentLoading();
      
      try {
        window.MusicadoApp.processPayment();
      } catch (error) {
        console.error('Payment processing error:', error);
        showPaymentError('Er is een fout opgetreden. Probeer het opnieuw.');
        resetPaymentState();
      }
    } else {
      console.error('MusicadoApp niet geladen');
      alert('Applicatiefout. Ververs de pagina.');
      resetPaymentState();
    }
  }

  // Reset payment state for retry
  function resetPaymentState() {
    isProcessingPayment = false;
    paymentAttempted = false;
    
    const button = document.getElementById('paymentButton');
    if (button) {
      button.disabled = false;
      button.style.pointerEvents = 'auto';
      button.querySelector('.button-text').style.display = 'inline';
      button.querySelector('.button-loading').style.display = 'none';
    }
  }

  // Retry payment function
  function retryPayment() {
    const errorDiv = document.getElementById('paymentError');
    const paymentSection = document.getElementById('paymentSection');
    
    if (errorDiv) errorDiv.style.display = 'none';
    if (paymentSection) paymentSection.style.display = 'block';
    
    // Reset payment state
    resetPaymentState();
  }

  // Show payment loading state
  function showPaymentLoading() {
    const button = document.getElementById('paymentButton');
    if (button) {
      button.disabled = true;
      button.querySelector('.button-text').style.display = 'none';
      button.querySelector('.button-loading').style.display = 'inline-flex';
    }
  }

  // Show payment error
  function showPaymentError(message) {
    const errorDiv = document.getElementById('paymentError');
    const paymentSection = document.getElementById('paymentSection');
    
    if (errorDiv && paymentSection) {
      errorDiv.querySelector('.error-message').textContent = message;
      errorDiv.style.display = 'block';
      paymentSection.style.display = 'none';
    }
    
    resetPaymentState();
  }

  // Success callback to reset processing flag
  function onPaymentSuccess() {
    console.log('Payment completed successfully');
    // Don't reset flags on success - let the page redirect
  }

  // Error callback to reset processing flag
  function onPaymentError(error) {
    console.error('Payment error:', error);
    showPaymentError(error.message || 'Er is een fout opgetreden bij de betaling.');
  }

  // Make functions globally available
  window.showPaymentLoading = showPaymentLoading;
  window.showPaymentError = showPaymentError;
  window.resetPaymentButton = resetPaymentState;
  window.onPaymentSuccess = onPaymentSuccess;
  window.onPaymentError = onPaymentError;
  window.processPayment = processPaymentOnce; // Alias for compatibility

  // Page unload prevention during payment processing
  window.addEventListener('beforeunload', function(e) {
    if (isProcessingPayment) {
      e.preventDefault();
      e.returnValue = 'Je bestelling wordt verwerkt. Weet je zeker dat je de pagina wilt verlaten?';
      return e.returnValue;
    }
  });

  // Prevent form submissions and other interactions during processing
  document.addEventListener('DOMContentLoaded', function() {
    // Disable all other buttons during payment processing
    const originalAddEventListener = EventTarget.prototype.addEventListener;
    EventTarget.prototype.addEventListener = function(type, listener, options) {
      if (type === 'click' && this.tagName === 'BUTTON' && isProcessingPayment) {
        return; // Don't add click listeners during processing
      }
      return originalAddEventListener.call(this, type, listener, options);
    };
  });
</script>

