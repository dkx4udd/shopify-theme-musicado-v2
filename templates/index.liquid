<!-- Smooth scroll for CTA button -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle smooth scroll for CTA button
  const heroBtn = document.querySelector('.hero-btn');
  if (heroBtn && heroBtn.getAttribute('href') === '#selectionForm') {
    heroBtn.addEventListener('click', function(e) {
      e.preventDefault();
      const target = document.getElementById('selectionForm');
      if (target) {
        target.scrollIntoView({ 
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  }
});
</script>
